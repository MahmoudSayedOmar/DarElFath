@using System.Globalization
@using System.Threading;
@{
    
    ViewBag.Title = "Home Page";
}


<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        @*<li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
        <li data-target="#carousel-example-generic" data-slide-to="1"></li>
        <li data-target="#carousel-example-generic" data-slide-to="2"></li>*@
        @for (int i = 0; i < ViewBag.slides.Count; i++)
        {
            if (i == 0)
            {
                <li data-target="#carousel-example-generic" data-slide-to="@i" class="active"></li>
            }
            else
            {
                <li data-target="#carousel-example-generic" data-slide-to="@i"></li>
            }
        }
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        @for (int i = 0; i < ViewBag.slides.Count; i++)
        {
            if (i == 0)
            {
                <div class="carousel-item active">
                    <img src="~/Images/@ViewBag.slides[i].ImagePath" alt="Slide @i" />
                    <div class="carousel-caption">
                        <h1>@if (Thread.CurrentThread.CurrentCulture.Name == "fr-FR")
                        { @ViewBag.slides[i].FrTitle;
                        }
                        else
                        { @ViewBag.slides[i].EnTitle;
                        }</h1>
                        <p>@if (Thread.CurrentThread.CurrentCulture.Name == "fr-FR")
                        { @ViewBag.slides[i].FrDesc;
                        }
                        else
                        { @ViewBag.slides[i].EnDesc;
                        }</p>
                    </div>
                </div>
            }
            else
            {
                <div class="carousel-item">
                    <img src="~/Images/@ViewBag.slides[i].ImagePath" alt="Slide @i" />
                    <div class="carousel-caption">
                        <h1>@if (Thread.CurrentThread.CurrentCulture.Name == "fr-FR")
                        { @ViewBag.slides[i].FrTitle;
                        }
                        else
                        { @ViewBag.slides[i].EnTitle;
                        }</h1>
                        <p>@if (Thread.CurrentThread.CurrentCulture.Name == "fr-FR")
                        { @ViewBag.slides[i].FrDesc;
                        }
                        else
                        { @ViewBag.slides[i].EnDesc;
                        }</p>
                    </div>
                </div>
            }

        }
        
        @*Slide Size : 1200x480*@
    </div>


    <!-- Controls -->
    <a class="carousel-control-prev" href="#carousel-example-generic" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    
    <a class="carousel-control-next" href="#carousel-example-generic" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>    </a>
</div>        